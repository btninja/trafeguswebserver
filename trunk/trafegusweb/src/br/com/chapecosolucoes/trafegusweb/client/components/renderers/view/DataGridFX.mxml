<?xml version="1.0" encoding="utf-8"?>
<mx:DataGrid 
    keyDown="{keyPressed(event)}"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    columnStretch="columnStretchHandler(event)">
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    <fx:Script>
        <![CDATA[
            import br.com.chapecosolucoes.trafegusweb.client.components.messagebox.MessageBox;

            import mx.events.DataGridEvent;
            import mx.events.FlexEvent;

            private function keyPressed(event:KeyboardEvent):void
            {
                if (event.keyCode == Keyboard.ENTER)
                {
                    var evt:MouseEvent = new MouseEvent(MouseEvent.DOUBLE_CLICK);
                    this.dispatchEvent(evt);
                }
            }

            protected function columnStretchHandler(event:DataGridEvent):void
            {
                MessageBox.informacao(event.columnIndex.toString());
            }
        ]]>
    </fx:Script>
    <mx:columns>
        <mx:DataGridColumn/>
    </mx:columns>
</mx:DataGrid>
