<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 initialize="init()" xmlns:searchInput="br.com.chapecosolucoes.trafegusweb.client.components.searchInput.*">
	<fx:Metadata>
		[Event(name="routeReceivedEvent",type="br.com.chapecosolucoes.trafegusweb.client.events.VehiclesHistoricEvent")]
	</fx:Metadata>
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import br.com.chapecosolucoes.trafegusweb.client.controller.VehiclesHistoricController;
			import br.com.chapecosolucoes.trafegusweb.client.model.MainModel;
			import br.com.chapecosolucoes.trafegusweb.client.vo.PosicaoVeiculoVO;
			
			import mx.controls.Alert;
			private var controller:VehiclesHistoricController;
			private function init():void
			{
				this.controller = new VehiclesHistoricController();
				this.controller.view = this;
			}
			public function posicaoVeiculoVO(value:PosicaoVeiculoVO):void
			{
				this.controller.solicitaHistoricoPosicoes(value);
			}
		]]>
	</fx:Script>
	<searchInput:SearchInputFX width="100%"/>
	<s:Group id="group1"
			 width="100%"
			 height="100%">
		<mx:DataGrid dataProvider="{MainModel.getInstance().historicoPosicoesVeiculosArray}"
					 width="100%"
					 height="100%">
			<mx:columns>
				<mx:DataGridColumn headerText="Data e hora"
								   dataField="dataEHora"/>
				<mx:DataGridColumn headerText="Posição"
								   dataField="gpsDescSis"/>
			</mx:columns>
		</mx:DataGrid>
	</s:Group>
	<s:Group id="group2" 
			 width="100%">
		<s:layout>
			<s:HorizontalLayout 
				horizontalAlign="center" 
				paddingBottom="5" paddingLeft="5" 
				paddingRight="5" paddingTop="5"/>
		</s:layout>
		<mx:Image source="@Embed(source='assets/Gnome-Go-First-16.png')" buttonMode="true" click="Alert.show('First')"/>
		<mx:Image source="@Embed(source='assets/Gnome-Go-Previous-16.png')" buttonMode="true" click="Alert.show('Previous')"/>
		<s:TextInput id="textInput" width="20" text="0"/>
		<mx:Image source="@Embed(source='assets/Gnome-Go-Next-16.png')" buttonMode="true" click="Alert.show('Next')"/>
		<mx:Image source="@Embed(source='assets/Gnome-Go-Last-16.png')" buttonMode="true" click="Alert.show('Last')"/>
	</s:Group>
</s:Group>
