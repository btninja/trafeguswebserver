<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				layout="vertical"
				showCloseButton="true"
				creationCompleteEffect="{dissolve,iris}"
				removedEffect="{dissolve,iris}"
				initialize="init()"
				creationComplete="creationComplete()"
				close="closeHandler()"
				title="Adicionar Entregas/Paradas"
				titleIcon="@Embed(source='assets/Map3.png')">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:Dissolve id="dissolve" duration="500"/>
		<mx:Iris id="iris" duration="500"/>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import br.com.chapecosolucoes.trafegusweb.client.model.MainModel;
			
			import mx.managers.PopUpManager;
			private function init():void{
				
			}
			private function creationComplete():void{
				
			}
			private function closeHandler():void
			{
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	<mx:DataGrid 
		id="grid" 
		width="100%" height="100%" 
		dataProvider="{MainModel.getInstance().veiculosArray}"
		toolTip="Clique sobre a placa do veiculo para exibir os detalhes.">
		<mx:columns>
			<mx:DataGridColumn headerText="Sequencia" dataField="seq"/>
			<mx:DataGridColumn headerText="Cod. Tipo Parada" dataField="cod"/>
			<mx:DataGridColumn headerText="Tipo Parada" dataField="tipoParada"/>
			<mx:DataGridColumn headerText="Cod. Ref." dataField="codReferencia"/>
			<mx:DataGridColumn headerText="Referencia" dataField="referencia"/>
			<mx:DataGridColumn headerText="Raio" dataField="raio"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:ControlBar horizontalAlign="right">
		<s:Button label="Adicionar"/>
		<s:Button label="Excluir"/>
	</mx:ControlBar>
</mx:TitleWindow>
