<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="this.creationComplete()">
	<fx:Script>
		<![CDATA[
			import br.com.chapecosolucoes.trafegusweb.client.controller.ParadasController;
			import br.com.chapecosolucoes.trafegusweb.client.model.MainModel;
			private var controller:ParadasController;
			private function creationComplete():void
			{
				this.controller = new ParadasController();
				this.controller.view = this;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<mx:DataGrid 
		id="grid" 
		width="100%" height="100%" 
		dataProvider="{MainModel.getInstance().paradasArray}">
		<mx:columns>
			<mx:DataGridColumn sortable="false" width="20" headerRenderer="br.com.chapecosolucoes.trafegusweb.client.components.renderers.view.DataGridHeaderRenderer"/>
			<mx:DataGridColumn headerText="Sequencia" dataField="seq"/>
			<mx:DataGridColumn headerText="Cod. Tipo Parada" dataField="codigoTipoTransporte"/>
			<mx:DataGridColumn headerText="Tipo Parada" dataField="descricaoTipoTransporte"/>
			<mx:DataGridColumn headerText="Cod. Ref." dataField="codigoReferencia"/>
			<mx:DataGridColumn headerText="Referencia" dataField="descricaoReferencia"/>
			<mx:DataGridColumn headerText="Raio" dataField="raio"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:ControlBar width="100%" horizontalAlign="right">
		<s:Button label="Adicionar" click="this.controller.addParadaZoomDispatcher()"/>
		<s:Button label="Excluir" click="this.controller.removeParada()"/>
	</mx:ControlBar>
</s:Group>
