<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 layout="vertical"
		 showCloseButton="true"
		 creationCompleteEffect="{dissolve,iris}"
		 removedEffect="{dissolve,iris}"
		 initialize="init()"
		 creationComplete="creationComplete()"
		 close="closeHandler()"
		 title="Novo Monitoramento"
		 titleIcon="@Embed(source='assets/wifi.png')"
		 xmlns:view="br.com.chapecosolucoes.trafegusweb.client.components.zoomcoddetailcomponent.view.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:Dissolve id="dissolve" duration="500"/>
		<mx:Iris id="iris" duration="500"/>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import br.com.chapecosolucoes.trafegusweb.client.controller.MonitoringRequestController;
			
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			private var controller:MonitoringRequestController;
			private function init():void{
				this.controller = new MonitoringRequestController();
				this.controller.view = this;
			}
			private function creationComplete():void{
				
			}
			private function closeHandler():void
			{
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	<mx:Form width="100%" height="100%">
		<mx:FormItem label="Tipo de viagem" required="true">
			<view:ZoomCodDetailView id="tipoViagemZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Viagem pai" required="true">
			<view:ZoomCodDetailView id="viagemPaiZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:HRule width="60%"/>
		<mx:FormItem label="Transportador" required="true">
			<view:ZoomCodDetailView id="transportadorZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Embarcador">
			<view:ZoomCodDetailView id="embarcadorZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Veiculo do Transportador" required="true">
			<view:ZoomCodDetailView id="veiculoZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Carretas">
			<mx:Image source="@Embed(source='assets/plus-icon.png')" buttonMode="true" click="this.controller.addCarretas()"/>
		</mx:FormItem>
		<mx:FormItem label="Motorista" required="true">
			<view:ZoomCodDetailView id="motoristaZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Plano de G.R." required="true">
			<view:ZoomCodDetailView id="planoGRZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:HRule width="60%"/>
		<mx:FormItem label="Rota">
			<view:ZoomCodDetailView id="rotaZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Origem" required="true">
			<view:ZoomCodDetailView id="origemZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Prev. inicio" required="true">
			<mx:DateField/>
		</mx:FormItem>
		<mx:FormItem label="Destino" required="true">
			<view:ZoomCodDetailView id="destinoZoom" clickZoom="this.controller.veiculoZoomDispatcher()"/>
		</mx:FormItem>
		<mx:FormItem label="Prev. fim" required="true">
			<mx:DateField/>
		</mx:FormItem>
		<mx:FormItem label="Entragas/Paradas">
			<mx:Image source="@Embed(source='assets/plus-icon.png')" buttonMode="true" click="this.controller.addParadas()"/>
		</mx:FormItem>
	</mx:Form>
	<mx:ControlBar horizontalAlign="right">
		<s:Button label="OK"/>
		<s:Button label="Cancel" click="this.closeHandler()"/>
	</mx:ControlBar>
</mx:TitleWindow>
