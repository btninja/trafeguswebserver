<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:view="br.com.chapecosolucoes.trafegusweb.client.view.*">
	<s:layout>
		<s:HorizontalLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import br.com.chapecosolucoes.trafegusweb.client.vo.PosicaoVeiculoVO;
			
			import com.google.maps.LatLng;
			[Bindable]
			public var posicaoVeiculoVO:PosicaoVeiculoVO;
			public function addPoint():void
			{
				posicaoVeiculoVO = new PosicaoVeiculoVO();
				posicaoVeiculoVO.ignition = 0;
				posicaoVeiculoVO.vehiclePlate = "AAA1234";
				posicaoVeiculoVO.gpsDescSis = "teste xyz";
				posicaoVeiculoVO.latLong = new LatLng(-15.779413016690475, -47.929744720458984);
				
				map.posicaoVeiculoVO = this.posicaoVeiculoVO; 
			}
		]]>
	</fx:Script>
	<view:MapView id="map" 
				  width="100%" height="100%"/>
	<s:Button label="Add Point" click="addPoint()"/>
</s:Group>
