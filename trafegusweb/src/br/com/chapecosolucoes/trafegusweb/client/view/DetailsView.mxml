<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%"
		 height="100%"
		 initialize="init()">
	<fx:Metadata>
		[Event(name="routeReceivedEvent",type="br.com.chapecosolucoes.trafegusweb.client.events.DetailsEvent")]
	</fx:Metadata>
	<s:layout>
		<s:VerticalLayout paddingRight="10"
						  paddingLeft="10"
						  paddingBottom="10"/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import br.com.chapecosolucoes.trafegusweb.client.controller.DetailsController;
			import br.com.chapecosolucoes.trafegusweb.client.model.MainModel;
			import br.com.chapecosolucoes.trafegusweb.client.vo.PosicaoVeiculoVO;
			import br.com.chapecosolucoes.trafegusweb.client.ws.TrafegusWS;

			import mx.controls.Alert;
			public var controller:DetailsController;

			private function init():void
			{
				this.controller = new DetailsController();
				this.controller.view = this;
			}

			public function posicaoVeiculoVO(value:PosicaoVeiculoVO):void
			{
				this.controller.solicitaHistoricoPosicoes();
			}
		]]>
	</fx:Script>
	<mx:ToggleButtonBar dataProvider="detailsViewStack"/>
	<mx:ViewStack id="detailsViewStack"
				  width="100%"
				  height="100%">
		<s:NavigatorContent label="Histórico de posições">
			<s:Group id="group1"
					 width="100%"
					 height="100%">
				<mx:DataGrid dataProvider="{MainModel.getInstance().historicoPosicoesVeiculosArray}"
							 width="100%"
							 height="100%">
					<mx:columns>
						<mx:DataGridColumn headerText="Data e hora"
										   dataField="dataEHora"/>
						<mx:DataGridColumn headerText="Posição"
										   dataField="gpsDescSis"/>
					</mx:columns>
				</mx:DataGrid>
			</s:Group>
		</s:NavigatorContent>
	</mx:ViewStack>
</s:Group>
